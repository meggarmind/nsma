{
  "name": "notion-sync-manager",
  "version": "1.0.0",
  "description": "Multi-project development inbox processor with Notion integration",
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3100 --turbopack",
    "build": "next build",
    "start": "next start -p 3100",
    "sync": "node cli/index.js",
    "sync:dry": "node cli/index.js --dry-run",
    "sync:daemon": "node cli/index.js --daemon",
    "sync:forward": "node cli/index.js --skip-reverse-sync",
    "reverse-sync": "node cli/index.js reverse-sync",
    "reverse-sync:dry": "node cli/index.js reverse-sync --dry-run",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch"
  },
  "bin": {
    "notion-sync": "./cli/index.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "chokidar": "^5.0.0",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "happy-dom": "^20.0.11",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
